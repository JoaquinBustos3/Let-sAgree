import { z } from 'zod';

export const showCardSchema = z.object({
  title: z.string(),
  synopsis: z.string(),
  genre: z.string(),
  seasons: z.number(),
  episodeLength: z.string(),
  platform: z.string(),
  vibe: z.string(),
  releaseYear: z.number(),
  imagePrompt: z.string(),
  imageUrl: z.string().optional(),
});

export type ShowCard = z.infer<typeof showCardSchema>;

// JSON Shape of the Model
