import { z } from 'zod';

export const weekendTripCardSchema = z.object({
  destination: z.string(),
  description: z.string(),
  travelTime: z.string(),
  vibe: z.string(),
  cost: z.string(),
  mainAttractions: z.array(z.string()),
  season: z.string(),
  lodging: z.string(),
  imagePrompt: z.string(),
  imageUrl: z.string().optional(),
});

export type WeekendTripCard = z.infer<typeof weekendTripCardSchema>;

// JSON Shape of the Model
/**
export interface WeekendTripCard {
  destination: string;
  description: string;
  travelTime: string; // e.g. "2 hours"
  vibe: string;
  cost: string; // "$$", "$$$"
  mainAttractions: string[];
  season: string;
  lodging: string; // "hotel", "Airbnb"
  imagePrompt: string;
  imageUrl?: string;
}
 */
